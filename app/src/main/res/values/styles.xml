<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/ground</item>
        <item name="itemIconTint">@android:color/secondary_text_light</item>
        <item name="itemTextColor">@android:color/secondary_text_light</item>
    </style>

    <style name="AppDarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTheme</item>
        <item name="colorAccent">@color/colorPrimaryDarkTheme</item>
        <item name="android:windowBackground">@drawable/ground_night</item>
    </style>

</resources>
